.data
   table:  .word 50, 30, 20, 40
           .word 51, 31, 21, 41 
           .word 52, 32, 22, 42 
           .word 53, 54, 55, 56          
   mes1:   .asciiz "\nRow #: "
   maxInt: .asciiz "Max: "
   newLine:.asciiz "\n"
   mes2:   .asciiz "\nColumn #: "
   row:    .word 0
   column: .word 0
   size:   .word 3
   
.text
     la $a1, table
     lw $t0, row
     lw $t1, column 
     lw $t2, size
     li $s0, 0
     li $s1, 0
     jal getmax
     
   getmax:
   
     bgt $t0, $t2, finish
     jal offset
     b getmax
     
   finish:
     li $v0, 4
     la $a0, maxInt 
     syscall
     move $a0, $s2
     li $v0, 1 
     syscall
     
     li $v0, 4
     la $a0, mes1 
     syscall
     move $a0, $t4 
     li $v0, 1 
     syscall
      
     li $v0, 4
     la $a0, mes2 
     syscall
     move $a0, $t5 
     li $v0, 1 
     syscall
     
     #exit
     li $v0,10
     syscall
     
     
   offset:    
     bgt $t1, $t2, next
    
     mul $s0, $t0, 4 
     add $s0, $s0, $t1 
     mul $s0, $s0, 4 
     add $s1, $s0, $a1 
     lw $s1, 0($s1)
      

     bge $s2, $s1, pause 
     move $s2, $s1
     
     move $t4, $t0
     move $t5, $t1 
     
   pause:
     add $t1, $t1, 1 
       
     j offset
       
      
   next:
     li $t1, 0
     add $t0, $t0, 1 
     j getmax
 

